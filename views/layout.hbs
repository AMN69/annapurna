  <link rel='stylesheet' href='../stylesheets/style.css' />
  
  <link rel="icon" href="../images/favicon/favicon-32x32.png" sizes="32x32" type="image/vnd.microsoft.icon">
  <link rel="apple-touch-icon-precomposed" href="../images/favicon/apple-touch-icon.png" type="image/vnd.microsoft.icon" sizes="152x152">
