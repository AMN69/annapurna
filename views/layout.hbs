<body>
  <header>
    <nav>
      <div class="nav-div">
        <img class="logo" src="./images/annapurna.png" alt="app logo">
        <div class="wrapper">
          <a href="/">Home</a>
          {{#if isUserLoggedIn}}
            <a href="/secret">Protected page</a>
            <a href="/logout">Logout</a>
          {{else}}
            <a href="/signup">Sign up</a>
