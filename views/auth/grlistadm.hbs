<h1 class="h1-class">GROUP EXCURSIONS (admin)</h1>

{{#each groupListAdmin}}
    <div class="group_list_admin">
        <p>{{this.groupName}}</p>
        <p>{{this.groupDescription}}</p>
        <form action="/melistadm/{{this._id}}" method="GET">
            <button type="submit" class="button-editdetails">MEET UPs</button>
        </form>
        <form action="/grdetadm/{{this.id}}" method="GET">
            <button type="submit">EDIT</button>
        </form>   
    </div>
{{/each}}

<form class="form-create" action="/grcreadm" method="GET">
            <button class="button-create" type="submit">CREATE NEW GROUP</button>
</form>     

