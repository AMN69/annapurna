                    1  Group --> "N" Meetups
      1 People --> "N" Meetups  --}}

{{!-- We come from melistus.hbs with _id.Meetup so we can render all the info --}}
{{!-- Table = meetup --}}

<h1>EXCURSION DETAILS</h1>

<h2>DETAILS</h2>

</br>
</br>
<div class="detailwrapper"">
  <div class="metdetails0">
        <p>Name: {{meetupDet.name}}</p>
        <p>Description: {{meetupDet.description}}</p>
        <p>Date: {{meetupDet.date}}</p>
        <p>Time: {{meetupDet.time}}</p>
        <p>Meeting point:</p>
        <p>Country: {{meetupDet.country}}</p>
        <p>City: {{meetupDet.city}}</p>
        <p>Zip code: {{meetupDet.zipcode}}</p>
        <p>Address: {{meetupDet.address}}</p>
        <p>Number: {{meetupDet.addressnum}}</p>
    </div>
    <div class="div-map">
        <img src="{{api}}" alt="point of meetup image">
    </div>
</div>



{{#if meetupUpdated}}
    <p class="updated">{{meetupUpdated}}</p>
{{else}}
    <p class="updated">You can join or leave an excursion.</p>
{{/if}}


{{#if isWithinMeetup}}
    <form action="/medetus/remove/{{meetupDet._id}}" method="POST">
        <button type="submit" class="button-addremove">REMOVE -</button>
    </form> 
{{else}}
    <form action="/medetus/add/{{meetupDet._id}}" method="POST">
        <button type="submit" class="button-addremove">ADD +</button>
    </form>
{{/if}}

<form action="/melistus/{{meetupDet.idGroup}}" method="GET">
    <button type="submit" class="button-backto">BACK TO EXCURSIONS</button>
</form>
<form action="/grlistus" method="GET">
    <button type="submit" class="button-backto">BACK TO GROUPs</button>
</form>    